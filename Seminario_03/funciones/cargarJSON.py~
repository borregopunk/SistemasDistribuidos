import twitter
import io
import json

#Función para la conexión.	
def oauth_login():
    CONSUMER_KEY = '75VGczgntSdDk4YoeHalFkoJ4'
    CONSUMER_SECRET = 'YiPLwwArmUEGZ92MOu2uizK2yfFhGKL1uVMZpkdY2wxtzOFOrz'
    OAUTH_TOKEN = '3108944081-YNshx0lLl1JQgTkvSDQBSiooDhKWcGOst8WT3A7'
    OAUTH_TOKEN_SECRET = 'KJKKH0rNIXSsrQgdmksjjsbHj74Jt1prHpnMmlMvkbJB7'

    auth = twitter.oauth.OAuth(OAUTH_TOKEN, OAUTH_TOKEN_SECRET, CONSUMER_KEY, CONSUMER_SECRET)

    twitter_api = twitter.Twitter(auth=auth)
    return twitter_api

#Función para grabar la información en formato JSON
def save_json(filename, data):
    with io.open('{0}.json'.format(filename),'w', encoding='utf-8') as f:
        f.write(unicode(json.dumps(data, ensure_ascii=False)))

#Función para leer el fichero JSON
def load_json(filename):
    with io.open('{0}.json'.format(filename),encoding='utf-8') as f:
        return f.read()
